pipeline {
    agent any

    stages {
        stage('Clone Repo') {
            steps {
                checkout([$class: 'GitSCM',
                    branches: [[name: 'main']],
                    userRemoteConfigs: [
                        [url: 'https://github.com/nicolas5143/tugas_mlops.git']
                    ]
                ])
            }
        }

        stage('Pull Docker Image') {
            steps {
                script {
                    sh '' // or omit
                    // The following might not work on cmd; you might need `BAT`
                    // So we use:
                    bat 'docker pull josetaneo/heart-disease-web:latest'
                }
            }
        }

        stage('Run Tests in Docker') {
            steps {
                script {
                    // Run container, execute test script, then destroy
                    bat 'docker run --rm josetaneo/heart-disease-web:latest python test_api.py'
                }
            }
        }

        stage('Deploy Container') {
            steps {
                script {
                    // Run container in detach mode
                    bat 'docker run -d -p 5000:5000 josetaneo/heart-disease-web:latest'
                }
            }
        }
    }
}
