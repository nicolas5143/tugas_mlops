pipeline {
    agent any

    stages {
        stage('Clone Repo') {
            steps {
                checkout([$class: 'GitSCM',
                    branches: [[name: 'main']],
                    userRemoteConfigs: [
                        [url: 'https://github.com/nicolas5143/tugas_mlops.git']
                    ]
                ])
            }
        }

        stage('Pull Docker Image') {
            steps {
                script {
                    bat 'docker pull josetaneo/heart-disease-web:latest'
                }
            }
        }

        stage('Deploy Container') {
            steps {
                script {
                    // Stop dan delete container jika memang ada
                    bat 'docker stop heart-disease-test 2> nul || echo Container not running'
                    bat 'docker rm heart-disease-test 2> nul || echo Container not present'

                    // Jalankan container yang baru
                    bat 'docker run -d -p 5000:5000 --name heart-disease-test josetaneo/heart-disease-web:latest'
                }
            }
        }
    }
}
