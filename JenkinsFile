pipeline {
    agent any

    stages {
        stage('Clone Repo') {
            steps {
                git branch: 'main', url: 'https://github.com/nicolas5143/tugas_mlops.git'
            }
        }

        stage('Use Existing Docker Image') {
            steps {
                script {
                    dockerImage = docker.image("heart-disease-web")
                }
            }
        }

        stage('Run Tests in Docker') {
            steps {
                script {
                    dockerImage.inside {
                        sh 'python test_api.py'
                    }
                }
            }
        }

        stage('Run Flask App in Docker') {
            steps {
                script {
                    dockerImage.run('-p 5000:5000')
                }
            }
        }
    }
}
