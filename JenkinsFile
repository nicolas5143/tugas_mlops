pipeline {
    agent any

    stages {
        stage('Clone Repo') {
            steps {
                checkout([$class: 'GitSCM',
                    branches: [[name: 'main']],
                    userRemoteConfigs: [
                        [url: 'https://github.com/nicolas5143/tugas_mlops.git']
                    ]
                ])
            }
        }

        stage('Pull Docker Image') {
            steps {
                script {
                    bat 'docker pull josetaneo/heart-disease-web:latest'
                }
            }
        }

        stage('Deploy Container') {
            steps {
                script {
                    // Cek apakah container tengah berjalan
                    def containerRunning = bat(script: '''
                        docker ps -q -f name=heart-disease-test
                    ''', returnStdout: true).trim()

                    if (containerRunning == '') {
                        // Jika tidak berjalan, maka mulai container
                        bat '''
                            docker run -d -p 5000:5000 --name heart-disease-test josetaneo/heart-disease-web:latest
                        '''
                        echo "Container heart-disease-test started!"
                    } else {
                        echo "Container heart-disease-test already exists and is running!"
                    }
                }
            }
        }
    }
}
