pipeline {
    agent any

    stages {
        stage('Clone Repo') {
            steps {
                checkout([$class: 'GitSCM',
                    branches: [[name: 'main']],
                    userRemoteConfigs: [
                        [url: 'https://github.com/nicolas5143/tugas_mlops.git']
                    ]
                ])
            }
        }

        stage('Pull Docker Image') {
            steps {
                script {
                    bat 'docker pull josetaneo/heart-disease-web:latest'
                }
            }
        }

        stage('Deploy Container') {
            steps {
                script {
                    // Stop container jika memang ada
                    bat '''
                        docker ps -a -q -f name=heart-disease-test | findstr .
                        if %errorlevel%==0 (
                            docker stop heart-disease-test
                            docker rm heart-disease-test
                        )
                    '''

                    // Run container yang baru
                    bat 'docker run -d -p 5000:5000 --name heart-disease-test josetaneo/heart-disease-web:latest'
                }
            }
        }
    }
}
